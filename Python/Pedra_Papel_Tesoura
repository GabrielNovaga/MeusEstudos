#Opção 1
import random

computer = ['Pedra','Papel','Tesoura']
computer = random.choice(computer)
user = input('Pedra, papel ou tesouro?')
print('\n')
print('Computador escolheu ' + computer)
print('\n')
print('user escolheu ' + user)
print('\n')
if computer == 'Pedra' and user == 'Papel':
  print('user venceu')
elif computer == 'Pedra' and user == 'Pedra':
  print('empate')
elif computer == 'Pedra' and user == 'Tesoura':
  print('computador venceu')
elif computer == 'Tesoura' and user == 'Pedra':
  print('user venceu')
elif computer == 'Tesoura' and user == 'Tesoura':
  print('empate')
elif computer == 'Tesoura' and user == 'Papel':
  print('computador venceu')
elif computer == 'Papel' and user == 'Pedra':
  print('computador venceu')
elif computer == 'Papel' and user == 'Papel':
  print('empate')
elif computer == 'Papel' and user == 'Tesoura':
  print('user venceu')

#-------------------------------------------------

import random

winner = ''

play = random.randint(0,2)

if play == 0:
  play = 'pedra'
elif play == 0:
  play = 'papal'
else:
  play = 'tesoura'

user = input('pedra, papel ou tesoura?')

if play == user:
  winner = 'empate'
elif play == 'papel' and user == 'pedra':
  winner = 'computador'
elif play == 'tesoura' and user == 'papel':
  winner = 'computador'
elif play == 'pedra' and user == 'tesoura':
  winner = 'computador'
else:
  winner = 'User'

print('O usuario escolheu', user)
print('\n')
print('O computador escolheu', play)
print('\n')

if winner == 'empate':
  print('Ixi, deu empate, bora mais uma')
else:
  print('O vencedor é ' + winner)


# AGORA SE FORMOS PENSAR QUE PRECISA SER IGUAL, N TENDO ERRO GRAMATICAL
#VÁ PARA O WHILE

if play == 0:
    play = 'papel' 
elif play == 1:
    play = 'papal'
else:
    play = 'tesoura'

user = ''
while (user != 'pedra' and
      user != 'tesoura' and
      user != 'papel'):
        user = input('pedra, papel ou tesoura? ')

if play == user:
  winner = 'empate'
elif play == 'papel' and user == 'pedra':
  winner = 'computador'
elif play == 'tesoura' and user == 'papel':
  winner = 'computador'
elif play == 'pedra' and user == 'tesoura':
  winner = 'computador'
else:
  winner = 'User'

print('\n')
print('O usuario escolheu', user)
print('\n')
print('O computador escolheu', play)
print('\n')

if winner == 'empate':
  print('Ixi, deu empate, bora mais uma')
else:
  print('O vencedor é ' + winner)

#Opção 2, usando While


winner = ''

play = random.randint(0,2)

if play == 0:
    play = 'papel' 
elif play == 1:
    play = 'papal'
else:
    play = 'tesoura'

user = ''
while (user != 'pedra' and
      user != 'tesoura' and
      user != 'papel'):
        user = input('pedra, papel ou tesoura? ')

if play == user:
  winner = 'empate'
elif play == 'papel' and user == 'pedra':
  winner = 'computador'
elif play == 'tesoura' and user == 'papel':
  winner = 'computador'
elif play == 'pedra' and user == 'tesoura':
  winner = 'computador'
else:
  winner = 'User'

print('\n')
print('O usuario escolheu', user)
print('\n')
print('O computador escolheu', play)
print('\n')

if winner == 'empate':
  print('Ixi, deu empate, bora mais uma')
else:
  print('O vencedor é ' + winner)
